generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Property {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  slug          String   @unique
  lat           Int
  lng           Int
  title         String   @unique
  rating        Int
  pricePerNight Int
  imageUrl      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt()
}
